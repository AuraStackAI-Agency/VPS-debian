# ========================================
# Environment Configuration Template
# ========================================
# Copy this file to .env and fill in your values
# DO NOT commit the actual .env file to Git

# ========================================
# General Configuration
# ========================================
DOMAIN=your-domain.com
VPS_IP=YOUR_VPS_IP_ADDRESS
TZ=Europe/Paris

# ========================================
# N8N Configuration
# ========================================
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=change_this_password

N8N_ENCRYPTION_KEY=generate_with_openssl_rand_base64_32

N8N_HOST=n8n.${DOMAIN}
N8N_PORT=5678
N8N_PROTOCOL=https
WEBHOOK_URL=https://n8n.${DOMAIN}/

# Queue Mode
N8N_EXECUTION_MODE=queue
EXECUTIONS_MODE=queue
QUEUE_BULL_REDIS_HOST=redis
QUEUE_BULL_REDIS_PORT=6379
QUEUE_BULL_REDIS_DB=0

# ========================================
# PostgreSQL Configuration
# ========================================
POSTGRES_USER=n8n
POSTGRES_PASSWORD=generate_strong_password_here
POSTGRES_DB=n8n
POSTGRES_NON_ROOT_USER=n8n
POSTGRES_NON_ROOT_PASSWORD=generate_another_strong_password

DB_TYPE=postgresdb
DB_POSTGRESDB_HOST=postgres
DB_POSTGRESDB_PORT=5432
DB_POSTGRESDB_DATABASE=${POSTGRES_DB}
DB_POSTGRESDB_USER=${POSTGRES_USER}
DB_POSTGRESDB_PASSWORD=${POSTGRES_PASSWORD}

# ========================================
# Redis Configuration
# ========================================
REDIS_PASSWORD=generate_redis_password_here

# ========================================
# Ollama Configuration
# ========================================
OLLAMA_HOST=0.0.0.0
OLLAMA_PORT=11434

# Default model to load on startup
OLLAMA_MODEL=qwen2.5-coder:3b-instruct

# ========================================
# Qdrant Configuration
# ========================================
QDRANT_PORT=6333
QDRANT_GRPC_PORT=6334

# ========================================
# MCP Configuration
# ========================================
MCP_PORT=3000
MCP_LOG_LEVEL=info

# ========================================
# SMTP Configuration (for N8N notifications)
# ========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
SMTP_SSL=true
SMTP_FROM=n8n@${DOMAIN}

# ========================================
# Backup Configuration
# ========================================
BACKUP_DIR=/opt/backups/postgres
BACKUP_RETENTION_DAYS=7

# ========================================
# Security
# ========================================
# SSH Port (if changed from default 22)
SSH_PORT=22

# Fail2Ban Ban Time (seconds)
FAIL2BAN_BANTIME=3600

# ========================================
# Monitoring (Optional)
# ========================================
NETDATA_PORT=19999
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=change_this_too

# ========================================
# Notes
# ========================================
# Generate secure passwords with:
#   openssl rand -base64 32
#
# Test SMTP configuration:
#   telnet smtp.gmail.com 587
